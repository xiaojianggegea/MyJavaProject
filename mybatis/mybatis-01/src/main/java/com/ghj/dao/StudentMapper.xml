<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghj.dao.StudentMapper">
<!--    查询全部信息-->
    <select id="findAllStudents" resultType="com.ghj.entity.Student">
        SELECT * FROM STUDENTS
    </select>
<!--    指定ID查询-->
    <select id="findStudentById" parameterType="int" resultType="com.ghj.entity.Student">
        SELECT * FROM STUDENTS WHERE ID=#{Id}
    </select>
    <insert id="insertStudent" parameterType="com.ghj.entity.Student">
        INSERT INTO STUDENTS(ID,NAME,EMAIL,DOB) VALUES(#{id},#{name},#{email},#{dob})
    </insert>
</mapper>